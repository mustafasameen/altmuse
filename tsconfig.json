{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": ["vitest/globals"]
  },
  "include": ["src", "tests", "tsup.config.ts", "website"],
  "exclude": ["node_modules", "build", "examples", "website"]
}
